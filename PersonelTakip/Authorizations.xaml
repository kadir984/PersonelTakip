<Window x:Class="PersonelTakip.Authorizations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonelTakip"
        mc:Ignorable="d"
        Title="Authorizations" Height="160" Width="450">
    <Grid>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="77" Click="BtnSave_Click"/>
        <Button x:Name="btnDelete" Content="Del" HorizontalAlignment="Left" Margin="92,94,0,0" VerticalAlignment="Top" Width="92" Click="BtnDelete_Click" RenderTransformOrigin="0.5,0.5"/>
        <DataGrid x:Name="dgAuthorizations" Margin="10,10,0,0" MouseDoubleClick="DgAuthorizations_MouseDoubleClick" IsReadOnly="True" AutoGenerateColumns="False" HorizontalAlignment="Left" Width="174" Height="79" VerticalAlignment="Top"/>
        <ListBox x:Name="lstAuthorizations" Margin="189,10,0,15" HorizontalAlignment="Left" Width="243"/>

    </Grid>
</Window>
